<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/background"
android:gravity="center"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.se.httpwww.se.Settings">




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:layout_marginBottom="10dp">
    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundicons"
        android:textSize="23sp"
        android:padding="12dp"
        android:id="@+id/usernameSettings"/>


</LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:layout_marginBottom="10dp">
    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundicons"
        android:textSize="23sp"
        android:padding="12dp"
        android:id="@+id/fullnameSettings"/>


</LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">
    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/mobileSettings"
        android:background="@drawable/roundicons"
        android:textSize="23sp"
        android:padding="12dp"/>


</LinearLayout>




<com.joanzapata.iconify.widget.IconButton

    android:id="@+id/passwordSettings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="{fa-lock #062136} Change Password"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:textSize="20dp"
    android:textAllCaps="false"
    android:layout_marginLeft="10dp"
    android:onClick="changePass"
    android:layout_centerInParent="true"
    android:layout_marginRight="10dp"
    android:background="@drawable/buttonshape"
    android:textColor="@color/main"/>


<Button

    android:id="@+id/signout"
    android:onClick="Logout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Signout"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:textSize="18dp"
    android:textAllCaps="false"
    android:layout_marginLeft="20dp"
    android:layout_centerInParent="true"
    android:layout_marginRight="20dp"
    android:background="@drawable/buttonshape"
    android:textColor="@color/yellow"

    />

</LinearLayout>
